  <!-- scripts -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.form/4.2.2/jquery.form.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.js"></script>
  <script src="https://www.google.com/recaptcha/api.js"></script>
  {{{_sections.script}}}
  
  {{{_sections.head}}}
</head>
<body>
  <div id="top"></div>
  
  {{{ body }}}
    
  <!-- floating Top Button -->
  <div class="top-button-wrap">
    <button id="topButton" data-scroll-href="top" class="circular ui icon blue basic button" style="float: right; display: none;">
      <i class="icon angle up"></i>
    </button>
  </div>
  
  <script>
  function chkCaptcha() {if (typeof(grecaptcha) != 'undefined') {if (grecaptcha.getResponse() == "") {alert("스팸방지코드를 확인해 주세요.");return false;}}else {return false;}}
  function smoothScroll(elementId){
    var el = $("#" + elementId);
    if( el.length ){
      $('body,html').animate({scrollTop: el.position().top}, 800);
    }
  }
  
  $(document)
    .ready(function() {
      $("*[data-scroll-href]").on('click', function(){
        smoothScroll($(this).data('scroll-href'));
      });
      
      $("body").visibility({
        once: false,
        onPassing: function(){
          $('#topButton').transition('fade up');
        },
        onPassingReverse: function(){
          $('#topButton').transition('fade down');
        }
      });
      
      $(".dropdown").dropdown();
      $('.message .close')
        .on('click', function() {
          $(this)
            .closest('.message')
            .transition('fade')
          ;
        })
      ;
    })
  ;
  </script>
</body>
</html>
